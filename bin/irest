#!/usr/bin/env node

const Iimage = require('./irest-image')
const Ijoke = require('./irest-joke')
const Inews = require('./irest-news')
const Iweather = require('./irest-weather')


function Helper() {
  console.log(`
_________ _______  _______  _______ _________     _______  _       _________
\\__   __/(  ____ )(  ____ \\(  ____ \\\\__   __/    (  ____ \\( \\      \\__   __/
   ) (   | (    )|| (    \\/| (    \\/   ) (       | (    \\/| (         ) (
   | |   | (____)|| (__    | (_____    | | _____ | |      | |         | |
   | |   |     __)|  __)   (_____  )   | |(_____)| |      | |         | |
   | |   | (\\ (   | (            ) |   | |       | |      | |         | |
___) (___| ) \\ \\__| (____/\\/\\____) |   | |       | (____/\\| (____/\\___) (___
\\_______/|/   \\__/(_______/\\_______)   )_(       (_______/(_______/\\_______/

`)
// 输出帮助信息
  console.log('[news] 看今天的头条新闻')
  console.log('[joke] 来条笑话')
  console.log('[weather] [arguments] 看看今天的天气')
  console.log('[image] [arguments] 搜张图片看看')
}

let ars = process.argv
if(ars.length > 2){

  // 功能
  switch (ars[2]){
    case 'news':
      Inews()
      break;
    case 'joke':
      Ijoke()
      break;
    case 'weather':
      Iweather(ars[3] || '')
      break;
    case 'image':
      if(ars[3] == ''){
        console.log('请传图片名称哦~')
        return
      }
      Iimage(ars[3])
      break;
    default:
      console.log('未知命令')
      Helper();
  }
  
}else{
  Helper();
}


